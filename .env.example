# Ninaivalaigal Environment Variables Example
# Copy this file to .env and set your actual values

# Server-side JWT secret (REQUIRED for server)
# Generate with: openssl rand -base64 32
NINAIVALAIGAL_JWT_SECRET=your-production-secret-key-here

# JWT token expiration (optional, default: 168 hours = 7 days)
NINAIVALAIGAL_JWT_EXPIRATION_HOURS=168

# User JWT token (set after login/signup)
# This will be provided by the server after authentication
NINAIVALAIGAL_USER_TOKEN=your-jwt-token-after-login

# Database configuration
MEM0_DATABASE_URL=postgresql://mem0user:mem0pass@localhost:5432/mem0db

# Development fallback (for backward compatibility)
MEM0_JWT_SECRET=dev-secret-key-change-in-production
