#!/usr/bin/env python3
# e^M CLI client - Ninaivalaigal Agentic Execution Engine
# Exponential Memory: commands, compounding memory, exponential action
# Part of Ninaivalaigal by Medhays (www.medhasys.com) that works on any system
"""

import os
import sys
import subprocess
from pathlib import Path

def main():
    # Find the project root directory (portable)
    script_dir = Path(__file__).parent
    project_root = script_dir.parent

    # Change to project root
    os.chdir(project_root)

    # Run the Python client with all arguments
    try:
        result = subprocess.run([sys.executable, 'eM.py'] + sys.argv[1:],
                              capture_output=False, text=True)
        sys.exit(result.returncode)
    except FileNotFoundError:
        print("❌ Error: e^M Python client not found")
        sys.exit(1)
    except Exception as e:
        print(f"❌ Error: {e}")
        sys.exit(1)

if __name__ == "__main__":
    main()
