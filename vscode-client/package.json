{
    "name": "ninaivalaigal-vscode",
    "displayName": "Ninaivalaigal",
    "description": "e^M - Exponential Memory layer for your development environment.",
    "version": "0.1.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/medhays/ninaivalaigal.git"
    },
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "chatParticipants": [
            {
                "id": "ninaivalaigal",
                "name": "e^M",
                "description": "Exponential Memory - I remember things so you don't have to."
            }
        ],
        "configuration": {
            "title": "Ninaivalaigal",
            "properties": {
                "ninaivalaigal.projectRoot": {
                    "type": "string",
                    "default": "",
                    "description": "The absolute path to the root of your Ninaivalaigal project."
                },
                "ninaivalaigal.context": {
                    "type": "string",
                    "default": "",
                    "description": "Explicit context name for this workspace (overrides auto-detection)."
                },
                "ninaivalaigal.serverUrl": {
                    "type": "string",
                    "default": "http://127.0.0.1:13370",
                    "description": "URL of the Ninaivalaigal server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "node esbuild.js",
        "watch": "node esbuild.js --watch",
        "package": "node esbuild.js --production"
    },
    "devDependencies": {
        "@types/node": "^20.19.13",
        "@types/vscode": "^1.74.0",
        "esbuild": "^0.21.4",
        "fs-extra": "^11.2.0",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.18.0"
    }
}
